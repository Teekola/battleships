{
   "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@/*": ["./src/*"],
         "@/fonts/*": ["./src/fonts/*"],
         "@/env/*": ["./src/env/*"],
         "@/auth/*": ["./src/auth/*"],
         "@/auth": ["./src/auth/auth"],
         "@/prisma": ["./prisma/prisma"],
         "@/components/*": ["./src/components/*"],
         "@/ui/*": ["./src/components/ui/*"],
         "@/hooks/*": ["./src/hooks/*"]
      },
      "types": ["vitest/jsdom", "@testing-library/jest-dom"],
      "target": "ES2017"
   },
   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
   "exclude": ["node_modules"],
   "ts-node": {
      "compilerOptions": {
         "module": "CommonJS"
      }
   }
}
